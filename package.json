{
  "name": "project-tech-team",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "eslint": "node_modules/.bin/eslint app.js controllers/*.js public/js/*.js",
    "stylelint": "node_modules/.bin/stylelint public/stylesheets/*.css",
    "nmStart": "nodemon app.js",
    "start": "node app.js"
  },
  "engines": {
    "node": "13.12.0",
    "npm": "6.14.4"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/sahitj001/project-tech-team.git"
  },
  "homepage": "https://github.com/sahitj001/project-tech-team",
  "bugs": {
    "url": "https://github.com/sahitj001/project-tech-team/issues"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Jordy Sahit",
      "url": "https://github.com/sahitj001"
    },
    {
      "name": "Chun Xiao",
      "url": "https://github.com/ChunningTatum"
    },
    {
      "name": "Giovanni Dwidjosewojo",
      "url": "https://github.com/GiovanniDw"
    },
    {
      "name": "Azam Awan",
      "url": "https://github.com/Awana1"
    }
  ],
  "dependencies": {
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.1",
    "express": "~4.16.1",
    "express-rate-limit": "^5.1.1",
    "express-session": "^1.17.0",
    "express-validator": "^6.4.0",
    "http-errors": "~1.6.3",
    "mongoose": "^5.9.6",
    "mongoose-autopopulate": "^0.12.1",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "nodemon": "^2.0.2",
    "stylelint": "^13.3.0",
    "stylelint-config-standard": "^20.0.0"
  },
  "eslintIgnore": [
    "*.ejs",
    "node_modules/"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "indent": [
        "error",
        "tab"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "no-var": "error",
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": "tab",
      "number-leading-zero": "never"
    }
  }
}
